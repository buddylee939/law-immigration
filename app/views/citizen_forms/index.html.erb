<p id="notice"><%= notice %></p>

<h1>Citizen Forms</h1>
<% if current_user.citizen_form %>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Date of birth</th>
        <th>Bio</th>
        <th>Twitter</th>
        <th>Github</th>
        <th>Website</th>
        <th>User</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @citizen_forms.each do |citizen_form| %>
        <% if current_user == citizen_form.user %>
          <tr>
            <td><%= citizen_form.name %></td>
            <td><%= citizen_form.date_of_birth %></td>
            <td><%= citizen_form.bio %></td>
            <td><%= citizen_form.twitter %></td>
            <td><%= citizen_form.github %></td>
            <td><%= citizen_form.website %></td>
            <td><%= citizen_form.user.email %></td>
            <td><%= link_to 'Show', citizen_form %></td>
            <td><%= link_to 'Edit', edit_citizen_form_path(citizen_form) %></td>
            <td><%= link_to 'Destroy', citizen_form, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>      
        <% end %>
      <% end %>
    </tbody>
  </table>
<% else %>
  <%= link_to 'New Citizen Form', new_citizen_form_path %>
<%  end %>